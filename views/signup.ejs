<!DOCTYPE HTML>
<html>

<head>
  <% include partials/head %>
</head>

<body>

  <header>
    <% include partials/header %>
  </header>
  <br>

  <div class="card border-0 text-center lspace rspace">
    <form method="post" action='/signup'>
      <h3>Sign Up for Vinyl</h3>
      <div class="card-block">
        <div class="form-group row">
          <label for="input-name" class="col-2 col-form-label">Name</label>
          <div class="col-10">
            <input class="form-control" type="text" name="name">
          </div>
        </div>
        <div class="form-group row">
          <label for="input-email" class="col-2 col-form-label">Email</label>
          <div class="col-10">
            <input class="form-control" type="email" name="email">
          </div>
        </div>
        <div class="form-group row">
          <label for="input-password" class="col-2 col-form-label">Password</label>
          <div class="col-10">
            <input class="form-control" type="password" name="password">
          </div>
        </div>

        <button class="btn btn-success">Sign Up</button>
      </div>
    </form>
  </div>

  <footer class="footer">
    <% include partials/footer %>
  </footer>

</body>

</html>
